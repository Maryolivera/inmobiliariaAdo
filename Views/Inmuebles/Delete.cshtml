<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Direccion)</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Uso)</dt>
