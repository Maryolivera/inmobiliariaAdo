@model InmobiliariaAdo.Models.Inmueble
@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<h1>Detalles del Inmueble</h1>

<dl class="row">
    <dt class="col-sm-3">Propietario</dt>
    <dd class="col-sm-9">@Model.PropietarioNombre</dd>

    <dt class="col-sm-3">Dirección</dt>
    <dd class="col-sm-9">@Model.Direccion</dd>

    <dt class="col-sm-3">Uso</dt>
    <dd class="col-sm-9">@Model.Uso</dd>

    <dt class="col-sm-3">Tipo de Inmueble</dt>
    <dd class="col-sm-9">@Model.TipoNombre</dd>

    <dt class="col-sm-3">Ambientes</dt>
    <dd class="col-sm-9">@Model.Ambientes</dd>

    <dt class="col-sm-3">Superficie (m²)</dt>
    <dd class="col-sm-9">@Model.Superficie</dd>

    <dt class="col-sm-3">Coordenadas</dt>
    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Coordenadas) ? "—" : Model.Coordenadas)</dd>

    <dt class="col-sm-3">Precio</dt>
    <dd class="col-sm-9">$ @Model.Precio</dd>

    <dt class="col-sm-3">Suspendido</dt>
    <dd class="col-sm-9">@(Model.Suspendido ? "Sí" : "No")</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
