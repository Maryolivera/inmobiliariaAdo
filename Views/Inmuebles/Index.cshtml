@model List<InmobiliariaAdo.Models.Inmueble>
@{ ViewData["Title"] = "Inmuebles"; }

<h1>Inmuebles</h1>

@if (TempData["Msg"] != null) {
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<p><a asp-action="Create" class="btn btn-primary">Nuevo Inmueble</a></p>

@if (Model == null || !Model.Any())
{
    <p>No hay inmuebles cargados.</p>
}
else
{
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Propietario</th>  
            <th>Dirección</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Amb.</th>
            <th>Sup.</th>
            <th>Precio</th>
            <th>Suspendido</th>
            <th style="width:180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>
                @x.PropietarioNombre
                
            </td>
            <td>@x.Direccion</td>
            <td>@x.Uso</td>
            <td>@x.Tipo</td>
            <td>@x.Ambientes</td>
            <td>@x.Superficie m²</td>
            <td>$ @x.Precio</td>
            <td>@(x.Suspendido ? "Sí" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
}

