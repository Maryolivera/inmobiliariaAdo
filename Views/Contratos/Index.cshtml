@model IEnumerable<InmobiliariaAdo.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Nuevo Contrato</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Monto</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InquilinoNombre</td>
            <td>@item.InmuebleNombre</td>
            <td>@item.MontoMensual</td>
            <td>@item.FechaInicio.ToShortDateString()</td>
            <td>@item.FechaFin.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>

                <!-- BotÃ³n para ver los pagos del contrato -->
                <a asp-controller="Pagos" asp-action="Index" asp-route-contratoId="@item.Id" class="btn btn-warning btn-sm">
                    Pagos
                </a>

                @if (User.IsInRole("Administrador"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                }
                else
                {
                    <span class="text-muted">ðŸ”’ Eliminar</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

