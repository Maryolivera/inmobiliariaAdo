@model InmobiliariaAdo.Models.Usuario

<h2>Editar Usuario</h2>

<form asp-action="Editar" asp-controller="Usuarios" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rol"></label>
        <select asp-for="Rol" class="form-control">
            <option>Administrador</option>
            <option>Empleado</option>
        </select>
    </div>

    <div class="form-group">
        <label>Avatar (opcional)</label>
        <input type="file" name="avatar" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <p>Actual: <img src="~/avatars/@Model.Avatar" alt="avatar" width="80" /></p>
            <label><input type="checkbox" name="eliminarAvatar" value="true" /> Eliminar avatar</label>
        }
    </div>

    <div class="form-group form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
