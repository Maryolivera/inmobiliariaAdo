@model List<InmobiliariaAdo.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
}

<h1>Propietarios</h1>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Propietario</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>No hay propietarios cargados.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>DNI</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Domicilio</th>
                <th>Tel√©fono</th>
                <th>Email</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.DNI</td>
                <td>@p.Nombre</td>
                <td>@p.Apellido</td>
                <td>@p.Domicilio</td>
                <td>@p.Telefono</td>
                <td>@p.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
