@model List<InmobiliariaAdo.Models.Pago>
@{ ViewData["Title"] = "Pagos"; }

<h1>Pagos</h1>

@if (TempData["Msg"] != null) {
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<p><a asp-action="Create" asp-route-contratoId="@ViewBag.ContratoId" class="btn btn-primary">Nuevo Pago</a></p>

@if (Model == null || !Model.Any())
{
    <p>No hay pagos cargados.</p>
}
else
{
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Inquilino</th><th>Número</th><th>Fecha</th><th>Detalle</th><th>Importe</th><th>Anulado</th>
            <th style="width:120px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var x in Model)
    {
        <tr class="@(x.Anulado ? "table-danger" : "")">
            <td>@ViewBag.InquilinoNombre</td>
            <td>@x.Numero</td>
            <td>@x.FechaPago.ToString("dd/MM/yyyy")</td>
            <td>@x.Detalle</td>
            <td>$ @x.Importe</td>
            <td>@(x.Anulado ? "Sí" : "No")</td>
            <td>
                @if (!x.Anulado)
                {
                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-danger">Anular</a>
                    }
                 else
    {
        <span class="text-muted">—</span>
    
    }

            </td>
        </tr>
    }
    </tbody>
</table>
}
